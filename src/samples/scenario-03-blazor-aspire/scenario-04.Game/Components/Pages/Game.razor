@page "/game"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable
@inject IConfiguration Configuration
@inject IJSRuntime JS
@inject ILogger<Game> Logger

<PageTitle>Game ‚Äî PersonaPlex</PageTitle>

<div class="game-page">
    <header class="game-header">
        <div>
            <h2>üéÆ Side-Scroller</h2>
            <div class="game-subtitle">Voice + keyboard powered run-and-jump challenge</div>
        </div>
        <div class="game-controls">
            <button class="btn-primary" @onclick="StartGame" disabled="@isRunning">‚ñ∂Ô∏è Start</button>
            <button class="btn-secondary" @onclick="PauseGame" disabled="@(!isRunning)">‚è∏Ô∏è Pause</button>
            <button class="btn-secondary" @onclick="RestartGame">üîÑ Restart</button>
        </div>
    </header>

    <section class="game-panel">
        <div class="game-area">
            <canvas id="game-canvas" width="800" height="400"></canvas>

            <div class="hud">
                <span>Score: <strong>@score</strong></span>
                <span>Lives: <strong>@lives</strong></span>
                <span class="voice-status @(voiceListening ? "listening" : "idle")">
                    @(voiceSupported
                        ? (voiceListening ? "üé§ Listening" : "üé§ Voice Ready")
                        : "üé§ Voice Unsupported")
                </span>
                <span class="voice-last">Last: <strong>@lastVoiceCommand</strong></span>
                <span class="hub-status @(IsHubConnected ? "connected" : "disconnected")">
                    @(IsHubConnected ? "üü¢ Hub" : "üî¥ Hub")
                </span>
            </div>

            @if (isGameOver)
            {
                <div class="game-over">
                    <div class="game-over-card">
                        <h3>üíÄ Game Over</h3>
                        <p class="final-score">Final score: <strong>@score</strong></p>
                        <button class="btn-primary pulse" @onclick="RestartGame">üîÑ Play Again</button>
                    </div>
                </div>
            }

            @if (voiceCommandLog.Any())
            {
                <div class="voice-command-log">
                    <div class="log-title">Voice Commands:</div>
                    @foreach (var cmd in voiceCommandLog)
                    {
                        <div class="log-entry">@cmd</div>
                    }
                </div>
            }
        </div>

        <aside class="game-sidebar">
            <div class="voice-panel">
                <h3>üé§ Voice Control</h3>
                <p>@voiceStatusMessage</p>
                <button class="btn-secondary" @onclick="ToggleVoice" disabled="@(!voiceSupported)">
                    @(voiceEnabled ? "Stop Voice" : "Start Voice")
                </button>
                @if (!string.IsNullOrWhiteSpace(voiceError))
                {
                    <div class="voice-error">@voiceError</div>
                }
            </div>

            <div class="instructions">
                <h3>Controls</h3>
                <ul>
                    <li><strong>Jump:</strong> Space or say <em>"jump"</em></li>
                    <li><strong>Shoot:</strong> S key or say <em>"shoot"</em></li>
                    <li><strong>Pause:</strong> Use the Pause button</li>
                    <li><strong>Restart:</strong> Use Restart after Game Over</li>
                </ul>
                <div class="tips">
                    Tip: Voice commands give bonus points and trigger hype TTS feedback!
                </div>
            </div>
        </aside>
    </section>
</div>

@code {
    private HubConnection? hubConnection;
    private IJSObjectReference? gameModule;
    private DotNetObjectReference<Game>? dotNetRef;
    private readonly Random rng = new();

    private int score;
    private int lives = 3;
    private bool isRunning;
    private bool isGameOver;
    private bool voiceSupported;
    private bool voiceEnabled;
    private bool voiceListening;
    private string lastVoiceCommand = "‚Äî";
    private List<string> voiceCommandLog = new();
    private string voiceStatusMessage = "Voice commands ready.";
    private string voiceError = string.Empty;

    private static readonly string[] JumpPhrases = { "Nice jump!", "Smooth!", "Great hop!", "Clean leap!" };
    private static readonly string[] ShootPhrases = { "Got 'em!", "Bullseye!", "Nice shot!", "Boom!" };
    private static readonly string[] VoicePhrases = { "Voice power!", "Command received!", "Nice call!" };
    private static readonly string[] HitPhrases = { "Ouch!", "Watch out!", "Careful!" };

    private bool IsHubConnected => hubConnection?.State == HubConnectionState.Connected;

    protected override async Task OnInitializedAsync()
    {
        var apiUrl = Configuration.GetConnectionString("api")
            ?? Configuration["Services:api:https:0"]
            ?? Configuration["Services:api:http:0"]
            ?? "https://localhost:5001";

        Logger.LogInformation("Connecting to API at {ApiUrl}", apiUrl);

        hubConnection = new HubConnectionBuilder()
            .WithUrl($"{apiUrl}/hubs/game")
            .AddMessagePackProtocol()
            .WithAutomaticReconnect()
            .Build();

        hubConnection.On<string>("ReceiveFeedback", message => _ = SpeakAsync(message));

        hubConnection.Closed += exception =>
        {
            Logger.LogWarning("SignalR connection closed: {Reason}", exception?.Message ?? "No reason");
            InvokeAsync(StateHasChanged);
            return Task.CompletedTask;
        };

        hubConnection.Reconnecting += exception =>
        {
            Logger.LogWarning("SignalR reconnecting: {Reason}", exception?.Message ?? "Unknown");
            InvokeAsync(StateHasChanged);
            return Task.CompletedTask;
        };

        hubConnection.Reconnected += connectionId =>
        {
            Logger.LogInformation("SignalR reconnected with connection ID: {ConnectionId}", connectionId);
            InvokeAsync(StateHasChanged);
            return Task.CompletedTask;
        };

        try
        {
            await hubConnection.StartAsync();
            Logger.LogInformation("SignalR connected to {Hub}", $"{apiUrl}/hubs/game");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to connect to API at {ApiUrl}. Game will run without backend feedback.", apiUrl);
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        dotNetRef = DotNetObjectReference.Create(this);
        gameModule = await JS.InvokeAsync<IJSObjectReference>("import", "./js/game-engine.js");
        await gameModule.InvokeVoidAsync("initGame", "game-canvas", dotNetRef);
        voiceSupported = await gameModule.InvokeAsync<bool>("isVoiceSupported");
        voiceStatusMessage = voiceSupported ? "Voice commands ready." : "Voice commands need Chrome or Edge.";
        StateHasChanged();
    }

    private async Task StartGame()
    {
        if (gameModule is null)
        {
            return;
        }
        if (isGameOver)
        {
            await RestartGame();
            return;
        }
        await gameModule.InvokeVoidAsync("startGame");
        isRunning = true;
        isGameOver = false;
    }

    private async Task PauseGame()
    {
        if (gameModule is null)
        {
            return;
        }
        await gameModule.InvokeVoidAsync("pauseGame");
        isRunning = false;
    }

    private async Task RestartGame()
    {
        if (gameModule is null)
        {
            return;
        }
        await gameModule.InvokeVoidAsync("resetGame");
        await gameModule.InvokeVoidAsync("startGame");
        isRunning = true;
        isGameOver = false;
        score = 0;
        lives = 3;
        lastVoiceCommand = "‚Äî";
        voiceCommandLog.Clear();
    }

    private async Task ToggleVoice()
    {
        if (!voiceSupported || gameModule is null)
        {
            return;
        }

        voiceError = string.Empty;
        if (voiceEnabled)
        {
            await gameModule.InvokeVoidAsync("stopVoiceControl");
            voiceEnabled = false;
            voiceListening = false;
            voiceStatusMessage = "Voice commands ready.";
        }
        else
        {
            await gameModule.InvokeVoidAsync("startVoiceControl", dotNetRef);
            voiceEnabled = true;
            voiceStatusMessage = "Listening for jump and shoot.";
        }
    }

    private async Task SpeakAsync(string text)
    {
        if (gameModule is null || string.IsNullOrWhiteSpace(text))
        {
            return;
        }
        await gameModule.InvokeVoidAsync("speakText", text);
    }

    private async Task SpeakRandomAsync(string[] options)
    {
        var phrase = options[rng.Next(options.Length)];
        await SpeakAsync(phrase);
    }

    [JSInvokable]
    public void OnScoreChanged(int newScore)
    {
        score = newScore;
        InvokeAsync(StateHasChanged);
    }

    [JSInvokable]
    public void OnLivesChanged(int newLives)
    {
        lives = newLives;
        InvokeAsync(StateHasChanged);
    }

    [JSInvokable]
    public async Task OnGameEvent(string eventType, string data)
    {
        switch (eventType)
        {
            case "jumped-obstacle":
                await SpeakRandomAsync(JumpPhrases);
                break;
            case "enemy-killed":
                await SpeakRandomAsync(ShootPhrases);
                break;
            case "voice-command":
                await SpeakRandomAsync(VoicePhrases);
                break;
            case "player-hit":
                await SpeakRandomAsync(HitPhrases);
                break;
        }
    }

    [JSInvokable]
    public void OnGameOver(int finalScore)
    {
        score = finalScore;
        isGameOver = true;
        isRunning = false;
        InvokeAsync(StateHasChanged);
    }

    [JSInvokable]
    public void OnVoiceStatusChanged(bool listening)
    {
        voiceListening = listening;
        InvokeAsync(StateHasChanged);
    }

    [JSInvokable]
    public void OnVoiceCommand(string command)
    {
        lastVoiceCommand = command;
        voiceCommandLog.Insert(0, $"{command.ToUpper()} (+50 pts)");
        if (voiceCommandLog.Count > 5) voiceCommandLog.RemoveAt(voiceCommandLog.Count - 1);
        InvokeAsync(StateHasChanged);
    }

    [JSInvokable]
    public void OnVoiceError(string message)
    {
        voiceError = message;
        voiceEnabled = false;
        voiceListening = false;
        voiceStatusMessage = "Voice commands unavailable.";
        InvokeAsync(StateHasChanged);
    }

    public async ValueTask DisposeAsync()
    {
        if (gameModule is not null)
        {
            try
            {
                await gameModule.InvokeVoidAsync("pauseGame");
                await gameModule.InvokeVoidAsync("stopVoiceControl");
            }
            catch
            {
                // ignored
            }
        }
        dotNetRef?.Dispose();
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}

